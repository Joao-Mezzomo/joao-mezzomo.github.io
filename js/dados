function rolarDado(lados = 20, idResultado = "resultadoDado") {
  const display = document.getElementById(idResultado);
  let contador = 0;
  display.style.textShadow = "0 0 5px var(--accent)"; // animaÃ§Ã£o inicial

  const intervalo = setInterval(() => {
    display.innerText = Math.floor(Math.random() * lados) + 1;
    contador++;
    if (contador > 8) {
      clearInterval(intervalo);
      const valor = Math.floor(Math.random() * lados) + 1;

      let resultadoFinal = `ğŸ² ${valor}`;
      if (lados === 20 && valor === 20) resultadoFinal = "ğŸ‰ 20! Acerto CrÃ­tico!";
      if (lados === 20 && valor === 1) resultadoFinal = "ğŸ’€ 1! Falha CrÃ­tica!";
      if (lados === 6 && valor === 6) resultadoFinal = "ğŸ‰ 6! Acerto CrÃ­tico!";
      if (lados === 6 && valor === 1) resultadoFinal = "ğŸ’€ 1! Falha CrÃ­tica!";
      if (lados === 100 && valor === 100) resultadoFinal = "ğŸ‰100! Acerto CrÃ­tico!";
      if (lados === 100 && valor === 1) resultadoFinal = "ğŸ’€ 1! Falha CrÃ­tica!";

      display.innerText = resultadoFinal;
      display.style.animation = "dadoGlow 0.5s ease";
    }
  }, 80);
}

// DADOS ESPECÃFICOS
function rolarD20() { rolarDado(20); }
function rolarD6() { rolarDado(6); }
function rolarD100() { rolarDado(100); }
